{
  "name": "@lunawork/root",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn turbo run build",
    "lint": "prettier --check \"./**/*.{ts,tsx,js,yaml,yml}\"",
    "lint:fix": "yarn lint --write"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "build/**"
        ]
      }
    }
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "prettier": "^2.5.1",
    "turbo": "^1.0.19",
    "typescript": "^4.5.5"
  }
}
